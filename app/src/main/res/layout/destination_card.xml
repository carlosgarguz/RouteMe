<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_destination_back"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            >

            <!--<TextView
                android:id="@+id/destination_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Destino X"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                >

            </TextView>-->

            <TextView
                android:id="@+id/destination_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:text="Nombre destino"
                android:autoSizeTextType="uniform"
                android:typeface="sans"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                >

            </TextView>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_stop_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/grey"
                android:textStyle="italic"
                android:text="Se efectuarÃ¡ una parad de "

                >

            </TextView>

            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <CheckBox
                android:id="@+id/check_box_is_last_point"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Destino final"
                android:textColor="@color/grey"
                android:textStyle="italic"
                android:layout_marginRight="5dp"
                android:buttonTint="@color/white"
                />


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>