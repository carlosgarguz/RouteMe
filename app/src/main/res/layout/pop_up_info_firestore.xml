<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_up_place"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/text_view_street_name_firebase_pop_up"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="90"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_marginBottom="10dp">

            </TextView>

            <ImageButton
                android:id="@+id/button_add_info_firebase"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:src="@android:drawable/ic_menu_edit"
                android:layout_marginLeft="5dp"
                android:background="@color/transparent"
                android:layout_marginRight="5dp">

            </ImageButton>

        </LinearLayout>

        <TextView
            android:id="@+id/text_view_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:paddingLeft="15dp"
            android:textSize="10dp">

        </TextView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_white"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            >



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_carga_descarga"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="visible"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/black"
                android:gravity="center"
                android:src="@drawable/ic_carga_descarga"
                >

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/text_view_info_carga_y_descarga"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:background="@drawable/textview_border"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/firebase_default_message"
                >

            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_white"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            >



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_parking"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="visible"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/black"
                android:gravity="center"
                android:src="@drawable/ic_parking"
                >

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/text_view_info_parking"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:background="@drawable/textview_border"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/firebase_default_message"
                >

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_white"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            >



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_doble_fila"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="visible"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/black"
                android:gravity="center"
                android:src="@drawable/ic_doble_fila"
                >

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/text_view_doble_fila"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:background="@drawable/textview_border"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/firebase_default_message"
                >

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_white"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            >



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_traffic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="visible"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/black"
                android:gravity="center"
                android:src="@drawable/ic_traffic"
                >

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/text_view_traffic"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:background="@drawable/textview_border"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/firebase_default_message"
                >

            </TextView>

        </LinearLayout>

